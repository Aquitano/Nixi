{
  "name": "nixi",
  "version": "0.0.1",
  "license": "GPL-3.0",
  "author": "Thomas Aquitano Breindl (https://aquitano.github.io/)",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
    "lint": "turbo run lint",
    "format": "turbo run format",
    "prepare": "husky install"
  },
  "devDependencies": {
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-turbo": "^0.0.3",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "prettier": "latest",
    "turbo": "latest"
  },
  "engines": {
    "npm": ">=7.0.0",
    "node": ">=14.0.0"
  },
  "packageManager": "pnpm@7.7.0",
  "lint-staged": {
    "apps/**/{src,test}/*.{js,jsx,cjs,mjs,ts,tsx,cts,mts,vue}": [
      "eslint --fix"
    ],
    "*.json": [
      "prettier --write"
    ]
  }
}
