{
	"name": "server",
	"version": "0.0.0",
	"private": true,
	"scripts": {
		"postinstall": "prisma generate",
		"prebuild": "rimraf dist",
		"build": "nest build",
		"prisma:dev:deploy": "prisma migrate deploy",
		"prisma:test:deploy": "dotenv -e .env.test -- prisma migrate deploy",
		"db:rm": "docker compose rm -s -f -v",
		"db:up": "docker compose up -d",
		"db:dev:restart": "pnpm run db:rm db && pnpm run db:up db && sleep 1 && pnpm run prisma:dev:deploy",
		"db:test:restart": "pnpm run db:rm test-db && pnpm run db:up test-db && sleep 1 && pnpm run prisma:test:deploy",
		"format": "prettier --write \"{src,apps,libs,test}/**/*.{js,jsx,cjs,mjs,ts,tsx,cts,mts,vue,css,scss}\" --config ../../.prettierrc",
		"start": "nest start",
		"start:debug": "nest start --debug --watch",
		"start:prod": "node dist/main",
		"dev": "nest start --watch",
		"lint": "eslint \"{src,test}/**/*.{js,jsx,cjs,mjs,ts,tsx,cts,mts,vue}\" --fix && tsc --noEmit",
		"test": "jest",
		"pretest:e2e": "dotenv -e .env.test -- pnpm run db:test:restart && docker compose --env-file .env.test up -d test-supertokens",
		"test:e2e": "dotenv -e .env.test -- jest --config ./test/jest-e2e.json"
	},
	"dependencies": {
		"@nestjs/common": "^10.0.1",
		"@nestjs/config": "^3.0.0",
		"@nestjs/core": "^10.0.1",
		"@nestjs/platform-express": "^10.0.1",
		"@nestjs/swagger": "^7.0.1",
		"@prisma/client": "^4.16.2",
		"argon2": "^0.30.3",
		"class-transformer": "^0.5.1",
		"class-validator": "^0.14.0",
		"dompurify": "^3.0.3",
		"helmet": "^7.0.0",
		"jsdom": "^22.1.0",
		"reflect-metadata": "^0.1.13",
		"rimraf": "^5.0.1",
		"rxjs": "^7.8.1",
		"supertokens-node": "^14.1.3",
		"turndown": "^7.1.2"
	},
	"devDependencies": {
		"@nestjs/cli": "^10.0.2",
		"@nestjs/schematics": "^10.0.1",
		"@nestjs/testing": "^10.0.1",
		"@types/dompurify": "^3.0.2",
		"@types/express": "^4.17.17",
		"@types/jest": "29.5.2",
		"@types/jsdom": "^21.1.1",
		"@types/node": "^20.3.1",
		"@types/supertest": "^2.0.12",
		"@types/turndown": "^5.0.1",
		"config": "workspace:*",
		"dotenv-cli": "^7.2.1",
		"eslint": "^8.44.0",
		"jest": "^29.6.1",
		"pactum": "^3.4.1",
		"prettier": "^2.8.8",
		"prisma": "^4.16.2",
		"source-map-support": "^0.5.21",
		"ts-jest": "^29.1.0",
		"ts-loader": "^9.4.3",
		"ts-node": "^10.9.1",
		"tsconfig": "workspace:*",
		"tsconfig-paths": "^4.2.0",
		"typescript": "^5.1.3"
	},
	"jest": {
		"moduleFileExtensions": [
			"js",
			"json",
			"ts"
		],
		"rootDir": "src",
		"testRegex": ".*\\.spec\\.ts$",
		"transform": {
			"^.+\\.(t|j)s$": "ts-jest"
		},
		"collectCoverageFrom": [
			"**/*.(t|j)s"
		],
		"coverageDirectory": "../coverage",
		"testEnvironment": "node"
	}
}
