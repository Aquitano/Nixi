{
  "name": "server",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "prisma:dev:deploy": "prisma migrate deploy",
    "prisma:test:deploy": "dotenv -e .env.test -- prisma migrate deploy",
    "db:rm": "docker compose rm -s -f -v",
    "db:up": "docker compose up -d",
    "db:dev:restart": "pnpm run db:rm db && pnpm run db:up db && sleep 1 && pnpm run prisma:dev:deploy",
    "db:test:restart": "pnpm run db:rm test-db && pnpm run db:up test-db && sleep 1 && pnpm run prisma:test:deploy",
    "format": "prettier --write \"{src,apps,libs,test}/**/*.{js,jsx,cjs,mjs,ts,tsx,cts,mts,vue,css,scss}\" --config ../../.prettierrc",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,test}/**/*.{js,jsx,cjs,mjs,ts,tsx,cts,mts,vue}\" --fix && tsc --noEmit",
    "test": "jest",
    "pretest:e2e": "dotenv -e .env.test -- pnpm run db:test:restart && docker compose --env-file .env.test up -d test-supertokens",
    "test:e2e": "dotenv -e .env.test -- jest --config ./test/jest-e2e.json"
  },
  "dependencies": {
    "@nestjs/common": "^9.0.11",
    "@nestjs/config": "^2.2.0",
    "@nestjs/core": "^9.0.11",
    "@nestjs/platform-express": "^9.0.11",
    "@prisma/client": "^4.2.1",
    "argon2": "^0.30.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.13.2",
    "dompurify": "^2.4.0",
    "jsdom": "^20.0.0",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^7.2.0",
    "supertokens-node": "^12.0.3"
  },
  "devDependencies": {
    "@nestjs/cli": "^9.1.1",
    "@nestjs/schematics": "^9.0.2",
    "@nestjs/testing": "^9.0.11",
    "@types/dompurify": "^2.3.4",
    "@types/express": "^4.17.13",
    "@types/jest": "29.2.3",
    "@types/node": "^18.7.15",
    "@types/supertest": "^2.0.11",
    "config": "workspace:*",
    "dotenv-cli": "^6.0.0",
    "eslint": "^8.0.1",
    "jest": "^29.0.1",
    "pactum": "^3.1.14",
    "prettier": "^2.3.2",
    "prisma": "^4.2.1",
    "source-map-support": "^0.5.20",
    "ts-jest": "^29.0.0",
    "ts-loader": "^9.2.3",
    "ts-node": "^10.0.0",
    "tsconfig": "workspace:*",
    "tsconfig-paths": "^4.1.0",
    "typescript": "^4.3.5"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
